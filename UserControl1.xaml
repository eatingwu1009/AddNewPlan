<UserControl x:Class="AddNewPlan.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddNewPlan"
             mc:Ignorable="d" d:DesignWidth="400" Height="200">
    <Grid Margin="0,0,-35,0">
        <Border Background="AliceBlue" BorderThickness="1" HorizontalAlignment="Left" Height="125" VerticalAlignment="Top" Width="300" Margin="0,0,-50,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Choose Machine :" FontFamily="Yu Gothic UI Semibold" VerticalAlignment="Top" Margin="20,10,0,0" TextDecorations="Underline" FontSize="14"/>
        <ComboBox Name="machine" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="20,50,0,0" ItemsSource="{Binding MachineName}" RenderTransformOrigin="0.25,0.545" FontSize="14"/>
        <Button Content="AddBeam" HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" FontSize="14" Margin="155,50,0,0" Click="Button_Click" RenderTransformOrigin="0.133,0.5" FontFamily="Yu Gothic UI Semibold"/>

    </Grid>
</UserControl>
