<UserControl x:Class="AddNewPlan.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddNewPlan"
             mc:Ignorable="d" d:DesignWidth="400" Height="200">
    <Grid Margin="0,0,-10,-65">
        <Border Background="AliceBlue" BorderThickness="0" HorizontalAlignment="Left" Width="275" Height="145" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Choose Machine" FontFamily="Trebuchet MS" VerticalAlignment="Top" Margin="19,21,0,0" TextDecorations="{x:Null}" FontSize="16" Width="155"/>
        <ComboBox Name="machine" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="20,42,0,0" ItemsSource="{Binding MachineName}" RenderTransformOrigin="0.25,0.545" FontSize="14"/>
        <Button Content="AddBeam➤" Background="Orchid" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="0" Width="91" FontSize="16" Margin="174,42,0,0" Click="Button_Click" RenderTransformOrigin="0.133,0.5" FontFamily="Yu Gothic UI Semibold" Foreground="MistyRose" Height="25"/>
        <CheckBox Name="MultipleIsocenter" Content="All Markers" HorizontalAlignment="Left" Margin="18,103,0,144" VerticalAlignment="Center" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Width="230" FontSize="16" FontFamily="Trebuchet MS"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" FontFamily="Trebuchet MS" VerticalAlignment="Top" Margin="20,84,0,0" TextDecorations="{x:Null}" Width="231" RenderTransformOrigin="0.49,-0.789" Text="plz check✔️If Applying another isocenters  "/>
    </Grid>
</UserControl>
